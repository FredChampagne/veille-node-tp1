<h1>Profil du membre</h1>

<p><%= membre.prenom %> <%= membre.nom %></br>
<%= membre.courriel %></br>
<%= membre.telephone %></p>

<form class='form_modif' action="/modifier" name='form_modif' id='form_modif' method="POST" >
    <input type = "hidden" name = "_id" value = "<%= membre._id %>"> 
    <input type = "text" placeholder="<%= membre.nom %>" name = "nom"> 
    <input type = "text" placeholder="<%= membre.prenom %>" name = "prenom">
    <input type = "text" placeholder="<%= membre.telephone %>" name = "telephone">
    <input type = "text" placeholder="<%= membre.courriel %>" name = "courriel">
    <input type="submit" value='Modifier'>
    <a href="/detruire/<%= membre._id %>">Supprimer</a>
</form>
