<h1>Profil du membre</h1>
<div class="info-membre">
    <p>
        <i class="fas fa-user"></i><%= membre.prenom %> <%= membre.nom %></br>
        <i class="fas fa-map-marker"></i><%= membre.ville %></br>
        <i class="fas fa-envelope"></i><%= membre.courriel %></br>
        <i class="fas fa-phone"></i><%= membre.telephone %>
    </p>
</div>
<h2>Éditer les informations</h2>
<form class='form_modif' action="/modifier" name='form_modif' id='form_modif' method="POST" >
    <input type = "hidden" name = "_id" value = "<%= membre._id %>"> 
    <div class="deux-colonnes">
        <div>
            <label for="nom"> Prénom </label>
            <input type = "text" placeholder="<%= membre.prenom %>" name = "prenom">
        </div>
        <div>
            <label for="nom"> Nom </label>
            <input type = "text" placeholder="<%= membre.nom %>" name = "nom">
        </div>
    </div>
    <div class="deux-colonnes">
        <div>
            <label for="nom"> Ville </label>
            <input type = "text" placeholder="<%= membre.ville %>" name = "ville">
        </div>
        <div>
            <label for="nom"> Téléphone </label>
            <input type = "text" placeholder="<%= membre.telephone %>" name = "telephone">
        </div>
    </div>
    <div class="deux-colonnes">
        <div>
            <label for="nom"> Courriel </label>
            <input type = "text" placeholder="<%= membre.courriel %>" name = "courriel">
        </div>
        <div class="boutons">
            <input type="submit" value='Modifier'>
            <a href="/detruire/<%= membre._id %>">Supprimer</a>
        </div>
    </div>
</form>
